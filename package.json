{
  "name": "karma-image-snapshot",
  "version": "0.0.10",
  "description": "Jasmine matcher for image comparisons based on jest-image-snapshot for visual regression testing",
  "author": "Maksim Ryzhikov <rv.maksim@gmail.com> (https://github.com/maksimr)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/maksimr/karma-image-snapshot.git"
  },
  "engines": {
    "node": ">= 14"
  },
  "main": "./src/index.js",
  "keywords": [
    "test",
    "visual testing",
    "snapshot testing",
    "css",
    "karma",
    "jasmine",
    "browser testing"
  ],
  "scripts": {
    "release": "npm version patch -m 'bump: version to %s'",
    "postrelease": "git push && git push --tags",
    "test": "karma start ./test/karma.config.js",
    "test:full": "npm run test -- --browsers=Chrome,Chromium,Firefox",
    "test:outdated": "node ./test/test-outdated.js",
    "test:type": "tsc",
    "lint": "eslint src/"
  },
  "peerDependencies": {
    "puppeteer": ">=10",
    "jest-image-snapshot": ">=4.5.1"
  },
  "devDependencies": {
    "puppeteer": "14.1.1",
    "playwright": "1.22.1",
    "jest-image-snapshot": "4.5.1",
    "karma": "6.3.20",
    "karma-jasmine": "5.0.1",
    "typescript": "4.6.4",
    "eslint": "8.15.0",
    "@types/node": "16.11.36",
    "@types/jasmine": "4.0.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "requireConfigFile": false
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "jasmine": true,
      "describe": true,
      "it": true,
      "beforeEach": true,
      "beforeAll": true,
      "afterEach": true,
      "expect": true,
      "expectAsync": true
    },
    "rules": {
      "no-undef": "error",
      "no-unused-vars": "error"
    }
  }
}
